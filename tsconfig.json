{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "downlevelIteration": true,
      "isolatedModules": true,
      "strict": true,
      "types": ["jest"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "sources/**/*"
    ]
  }
  